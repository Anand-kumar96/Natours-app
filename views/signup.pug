extends base

block content

    main.main
        .signup-form
            h2.heading-secondary.ma-bt-lg Create your account
            form.form.form--signup
                .form__group
                    label.form__label(for='name') Name
                    input#name.form__input.signup-name(type='text' placeholder='enter your name', required)
                .form__group
                    label.form__label(for='email') Email address
                    input#email.form__input.signup-email(type='email' placeholder='you@example.com', required)
                .form__group.ma-bt-md
                    label.form__label(for='password') Password
                    input#password.form__input.signup-password(type='password' placeholder='••••••••', required, minlength='8')
                .form__group.ma-bt-md
                    label.form__label(for='password-confirm') Confirm password
                    input#password-confirm.form__input.signup-confirmPassword(type='password' placeholder='••••••••', required, minlength='8')
                .form__group
                    button.btn.btn--green#signUp Sign Up