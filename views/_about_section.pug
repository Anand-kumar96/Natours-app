mixin aboutBox()
  mixin aboutImage(p)
    img(src=`img/nat-${p}-large.jpg`
      srcset=`img/nat-${p}.jpg 300w, img/nat-{p}-large.jpg 1000w`
      sizes="(max-width: 900px) 20vh, (max-width: 600px) 30vh, 300px" class =`composition__photo--p${p}`).composition__photo

  mixin features(icon, heading)
    .col-1-of-4
      .feature-box
        img(src=`/img/${icon}.png`).feature-box__icon
        h3.heading-tertiary.u-margin-bottom-small= heading
        p.feature-box__text Lorem ipsum dolor sit amet consectetur adipisicing elit. Aperiam, ipsum sapiente aspernatur.

  section.section-about
    .center-margin__text
      h2.heading-secondary--about Exciting Tours for adventurous people
    .row
      .col-1-of-2
        h3.heading-tertiary.u-margin-bottom-small You're going to fall in love with nature
        p.paragraph Lorem ipsum dolor sit amet consectetur adipisicing elit. Aperiam, ipsum sapiente aspernatur libero repellat quis consequatur ducimus quam nisi exercitationem omnis earum qui

        h3.heading-tertiary.u-margin-bottom-small Live adventures like you never have before
        p.paragraph Lorem ipsum dolor sit amet consectetur adipisicing elit. Asperiores nulla deserunt voluptatum nam.
        a(href="#").btn-text Learn More &rarr;

      .col-1-of-2
        .composition
          +aboutImage(1)
          +aboutImage(2)
          +aboutImage(3)

  //- Features
  .section-features
    .row
      +features("world","Explore the world")
      +features("compass","Meet nature")
      +features("map","Find your way")
      +features("heart","Live a healthier life")

